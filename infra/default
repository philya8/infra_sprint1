server {
    server_name 51.250.31.186 philyapuh.myddns.me;

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/philyapuh.myddns.me/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/philyapuh.myddns.me/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    listen 80;
    server_name puhphilya.myddns.me;

    # Отдача статики фронтенда
    location / {
        root /var/www/kittygram;
        try_files $uri /index.html;
    }

    # Отдача медиа-файлов (фотографий котиков)
    location /media/ {
        alias /var/www/kittygram/media/;
    }

    # Проксирование запросов к API на Gunicorn
    location /api/ {
        client_max_body_size 20M; # Увеличение лимита на размер файла
        proxy_pass http://127.0.0.1:8080;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }

    # Проксирование для админки
    location /admin/ {
        client_max_body_size 20M; # Увеличение лимита на размер файла
        proxy_pass http://127.0.0.1:8080/admin/;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/puhphilya.myddns.me/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/puhphilya.myddns.me/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}



server {
    if ($host = puhphilya.myddns.me) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name puhphilya.myddns.me;
    return 404; # managed by Certbot


}server {
    if ($host = philyapuh.myddns.me) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name 51.250.31.186 philyapuh.myddns.me;
    return 404; # managed by Certbot


}
